[
  {
    "id": "TC001",
    "title": "Criar iniciativa com dois marcos e salvar com sucesso",
    "description": "Valida que é possível cadastrar uma nova iniciativa com dados obrigatórios e dois marcos, exibindo confirmação e aparecendo na lista.",
    "category": "Gestão de iniciativas",
    "priority": "High",
    "steps": [
      {
        "type": "action",
        "description": "Navigate to /login"
      },
      {
        "type": "action",
        "description": "Type \"{{LOGIN_USER}}\" into the email/username field"
      },
      {
        "type": "action",
        "description": "Type \"{{LOGIN_PASSWORD}}\" into the password field"
      },
      {
        "type": "action",
        "description": "Click on \"Entrar\""
      },
      {
        "type": "assertion",
        "description": "Verify URL contains \"/\""
      },
      {
        "type": "action",
        "description": "Click on \"Iniciativas\" in the sidebar"
      },
      {
        "type": "action",
        "description": "Click on \"Atividades\""
      },
      {
        "type": "assertion",
        "description": "Verify URL contains \"/iniciativas/atividades\""
      },
      {
        "type": "action",
        "description": "Click on \"Nova Iniciativa\""
      },
      {
        "type": "action",
        "description": "Type \"Iniciativa E2E - Cadastro\" into the \"Nome\" field"
      },
      {
        "type": "action",
        "description": "Fill \"10/03/2026\" into the \"Data início\" field"
      },
      {
        "type": "action",
        "description": "Fill \"10/06/2026\" into the \"Data final\" field"
      },
      {
        "type": "action",
        "description": "Select the first available option from the \"Líder\" dropdown"
      },
      {
        "type": "action",
        "description": "Click on \"Adicionar marco\""
      },
      {
        "type": "action",
        "description": "Type \"Marco 1\" into the milestone \"Título\" field"
      },
      {
        "type": "action",
        "description": "Fill \"50\" into the milestone \"Percentual\" field"
      },
      {
        "type": "action",
        "description": "Fill \"10/04/2026\" into the milestone \"Data limite\" field"
      },
      {
        "type": "action",
        "description": "Click on \"Adicionar marco\""
      },
      {
        "type": "action",
        "description": "Type \"Marco 2\" into the second milestone \"Título\" field"
      },
      {
        "type": "action",
        "description": "Fill \"50\" into the second milestone \"Percentual\" field"
      },
      {
        "type": "action",
        "description": "Fill \"10/05/2026\" into the second milestone \"Data limite\" field"
      },
      {
        "type": "action",
        "description": "Click on \"Salvar\""
      },
      {
        "type": "assertion",
        "description": "Verify text \"Iniciativa salva com sucesso.\" is visible"
      },
      {
        "type": "assertion",
        "description": "Verify text \"Iniciativa E2E - Cadastro\" is visible"
      }
    ]
  },
